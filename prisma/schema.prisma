generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider = "zod-prisma-types"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  uid                String       @id @default(auto()) @map("_id") @db.ObjectId
  email              String       @unique
  password           String
  created_at         DateTime     @default(now())
  updated_at         DateTime
  authToken          AuthToken?
  passwordResetToken String?
  marketLists        MarketList[]
}

model AuthToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  createdAt DateTime
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [uid])
  userId    String   @unique @db.ObjectId
}

model MarketList {
  id      String           @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  items   MarketListItem[]
  User    User?            @relation(fields: [userUid], references: [uid])
  userUid String?          @db.ObjectId
}

model MarketListItem {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  prices   Price[]
  quantity Int
  weight   String?
  currency String
  brand    String

  MarketList   MarketList? @relation(fields: [marketListId], references: [id])
  marketListId String?     @db.ObjectId
}

model Price {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  type  String
  value Int
  unit  String

  MarketListItem   MarketListItem? @relation(fields: [marketListItemId], references: [id])
  marketListItemId String?         @db.ObjectId
}
